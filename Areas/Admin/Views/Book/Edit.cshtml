@model BooksApp.Models.ViewModels.BookWithCategoriesVM
<h1> Update Book</h1>
<div class="col-md-10">
    <form asp-action="Edit" enctype="multipart/form-data">
        <input asp-for="Book.BookID" hidden />
        <input asp-for="Book.ImgUrl" hidden />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group m-4">
            <label asp-for="Book.Title" class="control-label">Title</label>
            <input asp-for="Book.Title" class="form-control" />
            <span asp-validation-for="Book.Title" class="text-danger"></span>
        </div>
        <div class="form-group m-4">
            <label asp-for="Book.Author" class="control-label">Author</label>
            <input asp-for="Book.Author" class="form-control" />
            <span asp-validation-for="Book.Author" class="text-danger"></span>
        </div>

        <div class="form-group m-4">
            <label asp-for="Book.Description" class="control-label">Description</label>
            <input asp-for="Book.Description" class="form-control" />
            <span asp-validation-for="Book.Description" class="text-danger"></span>
        </div>

        <div class="form-group m-4">
            <label asp-for="Book.Price" class="control-label">Price</label>
            <input asp-for="Book.Price" class="form-control" />
            <span asp-validation-for="Book.Price" class="text-danger"></span>
        </div>

        <div class="form-group m-4">
            <label asp-for="Book.CategoryID" class="control-label">Category ID</label>
            <select asp-for="Book.CategoryID" class="form-control" asp-items="@Model.ListOfCategories">
                <option disabled selected>Select a Category</option>
            </select>
            <span asp-validation-for="Book.CategoryID" class="text-danger"></span>
        </div>

        <div class="form-group m-4">
            <label asp-for="Book.ImgUrl" class="control-label">Book Image</label>
            <input type="file" name="imgFile" class="form-control" />
        </div>

        <div class="form-group m-4">
            <input type="submit" value="Save Changes" class="form-control btn btn-primary" />
        </div>

    </form>
</div>