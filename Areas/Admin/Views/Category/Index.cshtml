@model List<Category>
<h1>Category List</h1>
    <div class="pt-1 pb-2"> 
        <table class="table table-striped table-bordered">
          <thead>
              <tr>
                  <th> Category Name</th>
                  <th>Category Description</th>
                  <th> </th>
              </tr>
          </thead>
          <tbody>
                @foreach (var eachCaregory in Model)
                {
                    <tr>
                        <td>@eachCaregory.Name</td>
                        <td>@eachCaregory.Description</td>
                        <td>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@eachCaregory.ID">Edit</a> | <a asp-controller="Category" asp-action="Delete" asp-route-id="@eachCaregory.ID">Delete</a> |  <a asp-controller="Category" asp-action="Details" asp-route-id="@eachCaregory.ID">Details</a>

                        </td>
                    </tr>
                 
                }
            </tbody>
      </table>
    </div>
    <div>
        <div class="col-6">

        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create New Category</a>
        </div>
    </div>